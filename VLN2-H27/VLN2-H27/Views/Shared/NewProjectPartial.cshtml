<!-- New project button to trigger modal -->

<div class="projects-head-container container">
    <h2>&lt My projects /&gt</h2>
    <div id="empty-div"></div>
    <button type="button" href="#" class="button" data-toggle="modal" data-target="#myModal"><span><p id="add-project-plus">+</p></span>Add a new project</button>
</div>

<!-- Modal container -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Register new user</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("createProject", "Editor", FormMethod.Post))
                {
                    @Html.TextBox("test")
                    <input type="submit" value="Plumbus" class="button" />
                }
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>