<!-- Register button to trigger modal -->
<button type="button" class="btn btn-info btn-lg" data-toggle="modal" data-target="#addUsersModal" id="addUserButton">Add Collaborators</button>

@using VLN2_H27.Models
@model Project_Users_Relations
<!-- Modal container -->
<div id="addUsersModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add Collaborators</h4>
            </div>
            <div class="modal-body">
                <div class="col-lg-6">
                    <div class="input-group">
                        <input type="text" id ="userToAdd" class="form-control" placeholder="Enter username">
                        <span class="input-group-btn">
                            <button class="btn btn-secondary" id="addSingleUser" type="button">Add</button>
                        </span>
                    </div>
                </div>

                <h2>Current Collaborators</h2>
                
                <div id="collaboratorList">                    

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>
