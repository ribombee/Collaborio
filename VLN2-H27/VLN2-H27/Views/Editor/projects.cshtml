    .col {
        display: inline-block;
        border: 1px solid lightgrey;
        padding: 10px 10px 20px 10px;
        width: 22%;
        margin: 10px;
        border-radius: 5px;
        text-align: center;
        height: 150px;
        flex: 1 0 200px;
    }

    .col:before, .col:after {
        box-sizing: border-box;
    }

    .button {
        display: inline-block;
        height: 50px;
        line-height: 50px;
        padding-right: 30px;
        padding-left: 70px;
        position: relative;
        background-color: rgb(41,127,184);
        color: rgb(255,255,255);
        text-decoration: none;
        text-transform: uppercase;
        letter-spacing: 1px;
        border-radius: 5px;
        -moz-border-radius: 5px;
        -webkit-border-radius: 5px;
        text-shadow: 0px 1px 0px rgba(0,0,0,0.5);
        border: none;
        outline: none;
    }

        .button p {
            position: absolute;
            left: 0;
            top: 0;
            width: 50px;
            background-color: rgba(0,0,0,0.5);
            font-size: 50px;
            border-top-left-radius: 5px;
            border-bottom-left-radius: 5px;
            border-right: 1px solid rgba(0,0,0,0.15);
            margin: 0px;
        }

        .button:hover p, .button.active p {
            border-right: 1px solid rgba(0,0,0,0.3);
        }

        .button:active {
            margin-top: 2px;
            margin-bottom: 13px;
        }
</style>

@Html.Partial("NewProjectPartial")

<div class="flex-grid">
    @foreach (VLN2_H27.Models.Project p in ViewBag.projects)
    {
        @Html.ActionLink((p.ProjectName), "editor", "Editor", new { @Id = p.Id }, new { @class = "col", id = ("project-" + p.Id), data_editing = 0 })
    }

</div>

