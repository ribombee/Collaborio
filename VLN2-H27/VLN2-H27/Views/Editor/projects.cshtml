@{
    ViewBag.Title = "projects";
    var projects = ViewBag.projects;
    var projectIdsJson = ViewBag.projectIdsJson;
}

<!-- TODO PUT STYLES IN CSS SHEET -->
<style>
    .flex-grid {
        display: flex;
        flex-wrap: wrap;
    }

    .col {
        display: inline-block;
        border: 1px solid black;
        padding: 10px 40px 120px 100px;
        width: 22%;
        margin: 10px;
    }

    .button {
        display: inline-block;
        height: 50px;
        line-height: 50px;
        padding-right: 30px;
        padding-left: 70px;
        position: relative;
        background-color: rgb(41,127,184);
        color: rgb(255,255,255);
        text-decoration: none;
        text-transform: uppercase;
        letter-spacing: 1px;
        margin-bottom: 15px;
        border-radius: 5px;
        -moz-border-radius: 5px;
        -webkit-border-radius: 5px;
        text-shadow: 0px 1px 0px rgba(0,0,0,0.5);
        border: none;
        outline: none;
    }

        .button p {
            position: absolute;
            left: 0;
            top: 0;
            width: 50px;
            background-color: rgba(0,0,0,0.5);
            font-size: 50px;
            border-top-left-radius: 5px;
            border-bottom-left-radius: 5px;
            border-right: 1px solid rgba(0,0,0,0.15);
            margin: 0px;
        }

        .button:hover p, .button.active p {
            border-right: 1px solid rgba(0,0,0,0.3);
        }

        .button:active {
            margin-top: 2px;
            margin-bottom: 13px;
        }
</style>

<h2>Projects</h2>



@Html.Partial("NewProjectPartial")

<div class="flex-grid">
    @foreach (VLN2_H27.Models.Project p in ViewBag.projects)
    {
        @Html.ActionLink(("Click here to edit " + p.ProjectName), "editor", "Editor", new { @Id = p.Id }, new { @class = "col", id = ("project-" + p.Id), data_editing = 0 })
    }

    @Html.ActionLink("For testing purposes", "editor", "Editor", new { @Id = 0 }, new { @class="col", id="project-0", data_editing=0})
    
</div>

@section scripts {
