@{
    ViewBag.Title = "projects";
    var projects = ViewBag.projects;
    var projectIdsJson = ViewBag.projectIdsJson;
}

<!-- TODO PUT STYLES IN CSS SHEET -->
<style>
    #projects-body {
        background-color: #e6e6e6;
    }
    .flex-grid {
        display: flex;
        flex-flow: row wrap;
        justify-content: space-around;
    }

    .flex-grid:after {
        content: "";
        flex: ;
    }

    .projects-head-container {
        width: 100%;
        padding-top: 30px;
        padding-left: 0px;
        padding-right: 0px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 50px;
    }

    #empty-div {
        flex: 0.9;
    }

    .col {
        display: inline-block;
        border: 2px groove lightgrey;
        padding: 10px 10px 20px 10px;
        width: 200px;
        border-radius: 5px;
        text-align: center;
        height: 220px;
        margin-bottom: 20px;
        background-color: white;
        font-size: 14px;
    }

    .col hr {
        border: 1px solid lightgrey;
        margin-top: 15px;
    }

    .empty-col {
        width: 150px;
        height: 0px;
    }

    .project-info {
        text-align: left;
        color: grey;
    }
    
    .project-info-title {
        color: black;
        font-weight: bold;
        padding-left: 5px;
        padding-right: 10px;
    }

    project-info-line {
        display: inline-block;
    }

    .project-title {
        font-family: 'Courier New';
        font-size: 16px;
        font-weight: bold;
        vertical-align: central;
    }

    .button {
        display: inline-block;
        height: 50px;
        line-height: 50px;
        padding-right: 30px;
        padding-left: 70px;
        position: relative;
        background-color: rgb(41,127,184);
        color: rgb(255,255,255);
        text-decoration: none;
        text-transform: uppercase;
        letter-spacing: 1px;
        border-radius: 5px;
        -moz-border-radius: 5px;
        -webkit-border-radius: 5px;
        text-shadow: 0px 1px 0px rgba(0,0,0,0.5);
        border: none;
        outline: none;
    }

        .button p {
            position: absolute;
            left: 0;
            top: 0;
            width: 50px;
            background-color: rgba(0,0,0,0.5);
            font-size: 50px;
            border-top-left-radius: 5px;
            border-bottom-left-radius: 5px;
            border-right: 1px solid rgba(0,0,0,0.15);
            margin: 0px;
        }

        .button:hover p, .button.active p {
            border-right: 1px solid rgba(0,0,0,0.3);
        }

        .button:active {
            margin-top: 2px;
            margin-bottom: 13px;
        }
</style>

<div id="projects-body">
    @Html.Partial("NewProjectPartial")

    <div class="flex-grid">
        @foreach(VLN2_H27.Models.Project p in ViewBag.projects) {
            <div class="col">
                <!--@Html.ActionLink((p.ProjectName), "editor", "Editor", new { @Id = p.Id }, new { @class = "project-title", id = ("project-" + p.Id), data_editing = 0 })
                <hr />
                <div class="project-info">
                    <p class="project-info-line"><span class="project-info-title">Created:</span>dd/mm/yyyy</p>
                    <p class="project-info-line"><span class="project-info-title">Size:</span>000 KB</p>
                    <p class="project-info-line"><span class="project-info-title">Collaborators:</span>5</p>
                </div>-->
                <a href="@Url.Action("editor", "Editor", new { @Id = p.Id })" class="project-title" id=("project-@p.Id")>
                    <div class="project-info">
                        <h3 style="text-align: center">@p.ProjectName</h3>
                        <p class="project-info-line"><span class="project-info-title">Created:</span>@p.DateAdded.Day/@p.DateAdded.Month/@p.DateAdded.Year</p>
                        <p class="project-info-line"><span class="project-info-title">Collaborators:</span>@p.NrOfUsers</p>
                        <p class="project-info-line"><span id=("project-@p.Id") class="project-info-title">Collaborators Online:</span></p>
                    </div>
                </a>
            </div>
        }
        @for(int i = 0; i < 10; i++) {
            <div class="empty-col"></div>
        }

    </div>
</div>

