
@{
    ViewBag.Title = "editor";
    Layout = "~/Views/Shared/_EditorLayout.cshtml";
    int projectId = ViewBag.projectId;
    string userName = ViewBag.UserName;
}

<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta http-equiv="Content-Type" content="text/html;charset=utf-8">


    <!-- FONT
    –––––––––––––––––––––––––––––––––––––––––––––––––– -->
    <link href='//fonts.googleapis.com/css?family=Raleway:400,300,600' rel='stylesheet' type='text/css'>

    <!-- CSS
    –––––––––––––––––––––––––––––––––––––––––––––––––– -->
    <link rel="stylesheet" href="css/skeleton.css">
    <link rel="stylesheet" href="../../EditorLibraries/jQueryFileTree/dist/jqueryFileTree.min.css">
    <link rel="stylesheet" href="css/jqft-test.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/8.6/styles/atelier-cave.light.min.css">
    <link rel="stylesheet" href="../../EditorLibraries/jQuerySimpleContextMenu/jquery.contextmenu.css">
    <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
    <link rel="stylesheet" href="../../Content/EditorDefault.css">

</head>
<body>
    <main>
        <!-- Editor language/mode picker -->
        <div id="editorWithPickers">
            <label class="control-label">Language</label>
            <select class="language-picker"></select>

            <!-- Editor theme picker -->
            <label class="control-label">Theme</label>
            <select class="theme-picker">
                <option>Visual Studio</option>
                <option>Visual Studio Dark</option>
                <option>High Contrast Dark</option>
            </select>

            <!-- Tabs -->
            <div id="tabs">
                <ul>
                       
                </ul>           
            </div>

            <!-- Monaco editor window -->
            <div id="monaco-editor" class="editor" style="width:800px;height:600px;border:1px solid grey"></div>
        </div>
        <!-- File tree applet -->
        <div id="filetree-parent">
            <div id="filetree" class="filetree" style="border:1px solid grey"></div>
        </div>

        <!-- SignalR Chat -->
        <div id="chatbox" class="chat">
            <div id="discussionbox" data-text="Connected to chat">
                <ul id="discussion" class="list-unstyled"></ul>
            </div>
            <textarea id="message" placeholder="Type your message"></textarea>
            <input type="hidden" id="displayname" />
        </div>


        <!-- Adding users -->
        @Html.Partial("addUsersPartial");


        <!-- Modal container -->
        <div id="myModal" class="modal fade" role="dialog">
            <div class="modal-dialog">

                <!-- Modal content-->
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Register new user</h4>
                    </div>
                    <div class="modal-body">
                        @using (Html.BeginForm("createFile", "Editor", FormMethod.Post, new { Id = "filePost" }))
                        {
                            @Html.Hidden("projectId", projectId)
                            @Html.TextBox("fileName")
                            @Html.DropDownList("emptyList", (IEnumerable<SelectListItem>)ViewBag.emptyList, new { @class = "language-picker" })
                            <input type="submit" value="Plumbus" class="button" id="filePostBtn"/>
                        }
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
                </div>

            </div>
        </div>

        @section scripts {
        <!--Reference the SignalR library. -->
        <script src="~/Scripts/jquery.signalR-2.2.2.min.js"></script>
        <!--Reference the autogenerated SignalR hub script. -->
        <script src="~/signalr/hubs"></script>


        <!-- Load Monaco Editor -->
        <script src="../../EditorLibraries/Monaco/dev/vs/loader.js"></script>

        <!-- Load jQueryFileTree -->
        <script src="../../EditorLibraries/jQueryFileTree/src/jQueryFileTree.js"></script>

        <!-- Load jQuerySimpleContextMenu -->
        <script src="../../EditorLibraries/jQuerySimpleContextMenu/jquery.contextmenu.js"></script>

        <!-- Declaring global variables from viewbag-->
        <script> var projectId = @(projectId),
            userName = '@(userName)',
            baseUrl = '@Url.Content("~")',
            getFileValueUrl = '@Url.Action("getFileValue", "Editor")',
            saveFileUrl = '@Url.Action("saveFile", "Editor")',
            createFileUrl = '@Url.Action("createFile", "Editor")',
            addUserUrl = '@Url.Action("addUser", "Editor")'; 
            getUserUrl = '@Url.Action("getUsers", "Editor")';</script>
        <!-- JS CODE GOES HERE -->
        <script src="../../Scripts/EditorScripts.js" type="text/javascript"></script>
         }
    </main>
</body>